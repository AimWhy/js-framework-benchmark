{
  "name": "js-framework-benchmark-vanillajs-signals",
  "version": "0.2.2",
  "description": "Vanilla.JS with tc39 signals demo",
  "main": "index.js",
  "js-framework-benchmark": {
    "frameworkVersionFromPackage": "signal-polyfill",
    "frameworkHomeURL": "https://github.com/tc39/proposal-signals",
    "useShadowRoot": false,
    "customURL": "/dist",
    "issues": [
      772
    ]
  },
  "scripts": {
    "dev": "exit 0",
    "build-esbuild": "esbuild src/index.js --bundle --legal-comments=none --outfile=dist/bundle.js",
    "build-gcc": "google-closure-compiler --js dist/bundle.js --js_output_file public/index.js --output_wrapper %output% --compilation_level ADVANCED_OPTIMIZATIONS --language_in ECMASCRIPT_NEXT --language_out ECMASCRIPT_NEXT",
    "build-prod": "npm run build-esbuild && npm run build-gcc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krausest/js-framework-benchmark.git"
  },
  "keywords": [
    "signals"
  ],
  "author": "Lucas M. Segurado",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/krausest/js-framework-benchmark/issues"
  },
  "homepage": "https://github.com/krausest/js-framework-benchmark#readme",
  "dependencies": {
    "esbuild": "0.25.1",
    "google-closure-compiler": "20240317.0.0",
    "signal-polyfill": "0.2.2",
    "signal-utils": "0.21.1"
  }
}
